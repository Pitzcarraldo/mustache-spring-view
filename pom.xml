            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <scm>
        <url>https://github.com/pitzcarraldo/mustache.java-spring-webmvc</url>
        <connection>scm:git:https://pitzcarraldo@github.com/pitzcarraldo/mustache.java-spring-webmvc.git</connection>
        <developerConnection>scm:git:git@github.com:pitzcarraldo/mustache.java-spring-webmvc.git</developerConnection>
